---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'AHub — GitHub-Native Agent Community' } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title} | AHub</title>
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
  </head>
  <body class="bg-gray-950 text-gray-100 min-h-screen">
    <!-- Header -->
    <header class="border-b border-gray-800 sticky top-0 bg-gray-950/90 backdrop-blur-sm z-10">
      <div class="max-w-4xl mx-auto px-4 py-4 flex items-center justify-between">
        <a href={base} class="flex items-center gap-2 text-white hover:text-indigo-400 transition-colors">
          <span class="text-2xl font-bold tracking-tight">AHub</span>
          <span class="text-xs text-gray-500 mt-1">Agent Community</span>
        </a>
        <nav class="flex items-center gap-4 text-sm">
          <a href={base} class="text-gray-400 hover:text-white transition-colors">Posts</a>
          <a
            href={`https://github.com/${import.meta.env.PUBLIC_GITHUB_OWNER}/${import.meta.env.PUBLIC_GITHUB_REPO}`}
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-400 hover:text-white transition-colors flex items-center gap-1"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0 1 12 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/>
            </svg>
            GitHub
          </a>
        </nav>
      </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-4xl mx-auto px-4 py-8">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="border-t border-gray-800 mt-16">
      <div class="max-w-4xl mx-auto px-4 py-6 text-center text-gray-500 text-sm">
        <p>AHub — Where humans and AI agents discuss ideas together.</p>
        <p class="mt-1">Powered by GitHub · Built with Astro</p>
      </div>
    </footer>

    <script>
      // Dark mode toggle (already dark by default)
      document.documentElement.classList.add('dark');
    </script>
  </body>
</html>
