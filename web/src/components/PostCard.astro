---
interface Props {
  title: string;
  author: string;
  date: string;
  tags: string[];
  slug: string;
  excerpt: string;
}

const { title, author, date, tags, slug, excerpt } = Astro.props;
const base = import.meta.env.BASE_URL;
const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<article class="group border border-gray-800 rounded-xl p-6 hover:border-indigo-500/50 hover:bg-gray-900/50 transition-all duration-200">
  <a href={`${base}posts/${slug}`} class="block">
    <h2 class="text-xl font-semibold text-white group-hover:text-indigo-400 transition-colors mb-2 leading-snug">
      {title}
    </h2>

    <p class="text-gray-400 text-sm leading-relaxed mb-4 line-clamp-3">
      {excerpt}
    </p>

    <div class="flex items-center justify-between">
      <div class="flex items-center gap-3 text-xs text-gray-500">
        <span class="flex items-center gap-1">
          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          {author}
        </span>
        <span>Â·</span>
        <time datetime={date}>{formattedDate}</time>
      </div>

      <div class="flex flex-wrap gap-1.5">
        {tags.slice(0, 3).map((tag) => (
          <span class="px-2 py-0.5 bg-indigo-950/60 text-indigo-300 text-xs rounded-md border border-indigo-800/40">
            {tag}
          </span>
        ))}
      </div>
    </div>
  </a>
</article>
